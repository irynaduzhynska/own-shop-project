<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>com.internet.shop.controller.admin.GetAllUsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.internet.shop.controller.user.UserRegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getProducts</servlet-name>
        <servlet-class>com.internet.shop.controller.user.GetAllProductsForUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getProducts</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>buyProducts</servlet-name>
        <servlet-class>com.internet.shop.controller.user.AddProductToShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buyProducts</servlet-name>
        <url-pattern>/shopping-cart/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProducts</servlet-name>
        <servlet-class>com.internet.shop.controller.admin.AddProductToStorageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addProducts</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProducts</servlet-name>
        <servlet-class>com.internet.shop.controller.user.DeleteProductFromShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteProducts</servlet-name>
        <url-pattern>/shopping-cart/products/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shoppingCart</servlet-name>
        <servlet-class>com.internet.shop.controller.user.GetShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>shoppingCart</servlet-name>
        <url-pattern>/shoppingCart/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>com.internet.shop.controller.admin.DeleteUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createOrder</servlet-name>
        <servlet-class>com.internet.shop.controller.user.CompleteOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createOrder</servlet-name>
        <url-pattern>/order/complete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mainPage</servlet-name>
        <servlet-class>com.internet.shop.controller.GetMainPageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mainPage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminMainPage</servlet-name>
        <servlet-class>com.internet.shop.controller.admin.GetAdminMainPageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>adminMainPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getProductsForAdmin</servlet-name>
        <servlet-class>com.internet.shop.controller.admin.GetAllProductsForAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getProductsForAdmin</servlet-name>
        <url-pattern>/admin/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductsFromStorage</servlet-name>
        <servlet-class>com.internet.shop.controller.admin.DeleteProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteProductsFromStorage</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getUserMainPage</servlet-name>
        <servlet-class>com.internet.shop.controller.user.GetUserMainPageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getUserMainPage</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getUserOrders</servlet-name>
        <servlet-class>com.internet.shop.controller.user.GetAllOrdersForUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getUserOrders</servlet-name>
        <url-pattern>/user/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getUserOrderDetails</servlet-name>
        <servlet-class>com.internet.shop.controller.user.GetOrderDetailsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getUserOrderDetails</servlet-name>
        <url-pattern>/user/orders/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllOrders</servlet-name>
        <servlet-class>com.internet.shop.controller.admin.GetAllOrdersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getAllOrders</servlet-name>
        <url-pattern>/admin/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrder</servlet-name>
        <servlet-class>com.internet.shop.controller.admin.DeleteOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteOrder</servlet-name>
        <url-pattern>/orders/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginUser</servlet-name>
        <servlet-class>com.internet.shop.controller.user.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginUser</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userLogout</servlet-name>
        <servlet-class>com.internet.shop.controller.LogoutController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>com.internet.shop.controller.InjectDataController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/inject</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>errorHandle</servlet-name>
        <servlet-class>com.internet.shop.controller.ErrorController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>errorHandle</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error</location>
    </error-page>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>com.internet.shop.web.filters.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>authorizationFilter</filter-name>
        <filter-class>com.internet.shop.web.filters.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
